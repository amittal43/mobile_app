<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.build2gether.fx.PostActivity"
    tools:showIn="@layout/activity_post"
    android:clickable="true">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Post"
        android:textSize="22sp"
        android:textStyle="bold"
        android:id="@+id/post"
        android:background = "@drawable/rounded_btn"
        android:textColor="#ffffff"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/uploadImg"
        android:layout_alignStart="@+id/uploadImg"
        android:layout_alignRight="@+id/uploadImg"
        android:layout_alignEnd="@+id/uploadImg" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Exchange"
        android:id="@+id/exchange"
        android:textColor="#71f04772"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/uploadImg"
        android:layout_alignEnd="@+id/uploadImg" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Favor"
        android:id="@+id/favor"
        android:textColor="#71f04772"
        android:layout_alignLeft="@+id/exchange"
        android:layout_alignStart="@+id/exchange"
        android:layout_below="@+id/exchange"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/uploadImg" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Title"
        android:textColorHint="#d3d3d3"
        android:id="@+id/titleInput"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@android:color/transparent"
 />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Capture"
        android:textSize="22sp"
        android:textStyle="bold"
        android:id="@+id/uploadImg"
        android:textColor="#ffffff"
        android:background = "@drawable/rounded_btn"
        android:layout_above="@+id/post"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="20dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:gravity="top|left"
        android:ems="10"
        android:hint="Description"
        android:textColorHint="#d3d3d3"
        android:id="@+id/descriptionInput"
        android:background="@drawable/edittext_border"
        android:layout_below="@+id/titleInput"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/exchange"
        android:layout_alignRight="@+id/exchange"
        android:layout_alignEnd="@+id/exchange" />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:id="@+id/pic"
        android:layout_above="@+id/uploadImg"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
